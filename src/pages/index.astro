---
import Layout from "../layouts/Layout.astro";
import Hero from "@/components/Hero.astro";
import Intro from "@/components/Intro.astro";
import Data from "@/components/Data.astro";
import OurWork from "@/components/OurWork.astro";
import End from "@/components/End.astro";
import { getHomeData } from "@/services/home";

const home = await getHomeData();
---

<Layout>
	<Hero
		imgUrl={home.imgforhero.url} 
		title={home.titlehero} />
	<Intro
		introTitle={home.texfortintro}
		introText={home.text}
		introUrl={home.btnintrohome.urlbtnintro}
		introBtn={home.btnintrohome.btntextintro}
	/>
	<Data
		dataTitle={home.titleD}
		dataText={home.textD}
		dataOne={home.dataO}
		labelOne={home.labelDataOne}
		dataTwo={home.dataTw}
		labelTwo={home.labelDataTwo}
		dataThree={home.dataTr}
		labelThree={home.labelDataThree}
		dataUrl={home.btnDone.urlbtndata}
		dataBtn={home.btnDone.btntextdata}
	/>
	<OurWork 
		workTitle={home.titleintrocards} 
		worktext={home.textintrocards}
		workImgOne={home.imgone.alt}
		worlUrlOne={home.imgone.url}
		workTitleOne={home.titletwo}
		worlTextOne={home.textone}
		workImgTwo={home.imgtwo.alt}
		worlUrlTwo={home.imgtwo.url}
		workTitleTwo={home.titletwo}
		worlTextTwo={home.texttwo}
		workImgThree={home.imgthree.alt}
		worlUrlThree={home.imgthree.url}
		workTitleThree={home.titlethree}
		worlTextThree={home.textthree}
	/>
	<End 
	endTitle={home.titleend}
	endUrl={home.imgend.url}
	endAlt={home.imgend.alt}
	/>
</Layout>
