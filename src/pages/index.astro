---
import Layout from "../layouts/Layout.astro";
import { getHomeData } from "@/services/home";

const home = await getHomeData();
---

<Layout>
	<section class="bg-slate-500 w-screen h-screen p-10">
		<div class="max-w-7xl m-auto">
			<h1 class="text-5xl">{home.titlehero}</h1>
			<img
				class="w-52"
				src={home.imgforhero.url}
				alt={home.imgforhero.alt}
			/>
		</div>
		<div class="max-w-7xl m-auto py-8">
			<h2 class="py-5 text-3xl">{home.texfortintro}</h2>
			<p class="my-4">{home.text}</p>
			<a
				class="px-4 py-2 bg-blue-500 text-white font-semibold rounded-lg shadow-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75"
				href={home.btnintrohome.urlbtnintro}
				>{home.btnintrohome.btntextintro}</a
			>
		</div>
		<div class="max-w-7xl m-auto py-8">
			<h2 class="text-3xl py-5 flex flex-row items-center justify-center">
				{home.titleD}
			</h2>
			<p class="my-4">{home.textD}</p>
			<div class="flex flex-row items-center justify-center">
				<span class="my-5 mx-5 text-center">
					<h3>{home.dataO}</h3>
					<p>{home.labelDataOne}</p>
				</span>
				<span class="my-5 mx-5 text-center">
					<h3>{home.dataTw}</h3>
					<p>{home.labelDataTwo}</p>
				</span>
				<span class="my-5 mx-5 text-center">
					<h3>{home.dataTr}</h3>
					<p>{home.labelDataThree}</p>
				</span>
			</div>
			<div class="flex flex-row items-center justify-center">
				<a
					class="px-4 py-2 bg-blue-500 text-white font-semibold rounded-lg shadow-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75"
					href={home.btnDone.urlbtndata}>{home.btnDone.btntextdata}</a
				>
			</div>
		</div>
		<div class="max-w-7xl m-auto py-8">
			<h1>{home.titleintrocards}</h1>
			<h2>{home.textintrocards}</h2>
		</div>
		<div
			class="max-w-sm bg-white border border-gray-200 rounded-lg shadow-lg overflow-hidden"
		>
			<div class="flex justify-center items-center py-4">
				<img class="w-52" src={home.imgone.url} alt={home.imgone.alt} />
			</div>
			<div class="p-4">
				<h3 class="text-xl font-semibold text-gray-800 mb-2">
					{home.titleone}
				</h3>
				<p class="text-gray-600 text-sm">{home.textone}</p>
			</div>
		</div>
		<div
			class="max-w-sm bg-white border border-gray-200 rounded-lg shadow-lg overflow-hidden my-7"
		>
			<div class="flex justify-center items-center py-4">
				<img class="w-52" src={home.imgtwo.url} alt={home.imgtwo.alt} />
			</div>
			<div class="p-4">
				<h3 class="text-xl font-semibold text-gray-800 mb-2">
					{home.titletwo}
				</h3>
				<p class="text-gray-600 text-sm">{home.texttwo}</p>
			</div>
		</div>
		<div
			class="max-w-sm bg-white border border-gray-200 rounded-lg shadow-lg overflow-hidden my-7"
		>
			<div class="flex justify-center items-center py-4">
				<img
					class="w-52"
					src={home.imgthree.url}
					alt={home.imgthree.alt}
				/>
			</div>
			<div class="p-4">
				<h3 class="text-xl font-semibold text-gray-800 mb-2">
					{home.titlethree}
				</h3>
				<p class="text-gray-600 text-sm">{home.textthree}</p>
			</div>
		</div>
		<div class="max-w-7xl m-auto py-8">
			<h2 class="text-3xl py-5">{home.titleend}</h2>
			<img class="" src={home.imgend.url} alt={home.imgend.alt} />
		</div>
	</section>
</Layout>
